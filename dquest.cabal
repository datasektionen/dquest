library
  hs-source-dirs:      src
  exposed-modules:     DQuest.Server
                     , DQuest.Data.Hero
                     , DQuest.Data.Reward
                     , DQuest.Data.ProtoQuest
                     , DQuest.Data.Quest
                     , DQuest.Routes
                     , Datasektionen.Login
                     , Datasektionen.Pls

  other-modules:
                       Datasektionen.Login.Types
                     , Datasektionen.Login.Internal
                     , Servant.Ext

  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , servant
                     , servant-server
                     , servant-client
                     , wai
                     , warp
                     , aeson
                     , time
                     , mtl
                     , directory
                     , filepath
                     , http-media
                     , attoparsec
                     , base-compat
                     , aeson-compat
                     , bytestring
                     , http-types
                     , text
                     , uri-encode
                     , comonad
                     , safe
                     , http-client
                     , http-client-tls
                     , network-uri
                     , containers
                     , safecopy
                     , data-default
                     , mongoDB
                     , aeson-bson
  default-language:    Haskell2010

executable server
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , dquest
  default-language:    Haskell2010


source-repository head
  type:     git
  location: https://github.com/black0range/dquest
