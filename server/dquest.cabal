                     , servant-client
                     , safe
                     , wai
                     , warp
                     , time
                     , mtl
                     , directory
                     , filepath
                     , http-media
                     , attoparsec
                     , base-compat
                     , aeson-compat
                     , bytestring
                     , http-types
                     , safe
                     , text
                     , uri-encode
                     , http-client  == 0.5.7.0
                     , http-client-tls == 0.3.5.1
                     , network-uri
                     , containers
                     , safecopy
                     , data-default
                     , mongoDB
                     , shared


  default-language:    Haskell2010

executable server
  hs-source-dirs:      app
  main-is:             Main.hs
